.row
  %h4.col.s12 Setup a new #{@channel.kind} channel

= form_for(@config, as: :config, url: {controller: :channels_ui, action: :create}, html: {autocomplete: 'off'}, builder: MaterializeFormBuilder) do |f|
  - if @config.errors[:base].present?
    %i.material-icons.red-text.left error
    = f.error_message :base

  %input{type: :hidden, name: :kind, value: params[:kind]}
  .row
    = f.text_field :name, helper: 'A friendly name for the channel, so you can identify it'

  = render "form_#{params[:kind]}", f: f

  .row
    .right-align.col.s12
      %a.btn-flat{onclick: "sendCancel()"} Cancel
      %button.btn-large.waves-effect.waves-light.blue{onclick: "this.form.submit()"} Create Channel
