<h1>Backup details</h1>

<h2><%= @path %></h2>
<%= "in progress" if @locked %>

<ul>
  <li>Timestamp: <%= @time.to_s %></li>
  <li>Call logs: <%= @call_logs.size %></li>
  <li>DB size: <%= @db_dump_size / 1024 %> kb</li>
</ul>

<% unless @locked %>
  <form action="/restore/<%= @path %>" method="POST">
    <input type="submit" value="Restore this backup" />
  </form>
  <a href="/download/<%= @path %>">Download this backup</a>
<% end %>
