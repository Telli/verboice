<h1>Backups</h1>

<ul>
<% @entries.each do |entry| %>
  <li>
    <% if entry[:locked]%>
      <%= entry[:time].to_s %> [in progress]
    <% else %>
      <a href="#"><%= entry[:time].to_s %></a>
    <% end %>
  </li>
<% end %>
</ul>

<form action="/backups" method="POST">
  <input type="submit" value="Create new backup"/>
</form>
